{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check": {
      "cache": true
    },
    "dev": {
      "dependsOn": ["@repo/common#build", "@repo/prisma#build"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:drop": {
      "cache": false
    },
    "db:pull": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    }
  }
}
